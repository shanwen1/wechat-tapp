.slogan {
  font-size: 30rpx;
}

.more {
  float: right;
}

.more-text {
  font-size: 28rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-container{
