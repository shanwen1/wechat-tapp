swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 600rpx;
}
.post-container {
  /*弹性盒子 */
  display: flex;
  /* 垂直 */
  flex-direction: column;
  margin-top: 10px;
  margin-bottom: 20px;
  background-color: #fff;
  border-top:1px solid #ededed; 
  border-bottom:1px solid #ededed; 
  padding-bottom:5px; 
}
/* 第一行 */
.post-author-date {
  /* margin-top: 5px;
  margin-bottom: 10px;
  margin-left: 5px; */
  /* 上右下左 */
  margin: 10px 0px 10px 5px;
  display: flex;
  /* 横向排列 */
  flex-direction: row;
  /* 属性定义flex子项在flex容器的当前行的侧轴（纵轴）方向上的对齐方式 */
  align-items: center;
}

/* 第一行 的头像 */
.post-author{
  height: 60rpx;
  width: 60rpx;
  /* vertical-align: middle; */
}
/* 第一行 的日期 */
.post-date{
  margin-left: 20rpx;
  font-size: 26rpx;
  /* vertical-align: middle; */
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image { 
  width: 100%;
  height: 340rpx;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10px;
  font-size: 26rpx;
}

.post-like-img{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.post-like-font{
  margin-right: 40rpx;
}